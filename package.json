{
  "name": "albion-mail-extractor",
  "version": "1.0.0",
  "description": "Extract mail data from Albion Online",
  "author": {"name": "5niperspider"},
  "main": "electron-main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "dist-linux": "npm run build && electron-builder --linux",
    "dist-win": "npm run build && electron-builder --win"
  },
  "build": {
    "appId": "com.albion.mailextractor",
    "productName": "Albion-Mail-Extractor",
    "files": [
      "dist/**/*",
      "src/**/*",
      "electron-main.js",
      "ui.html",
      "node_modules/**/*",
      "package.json",
      "icon.png",
      "icon.ico"
    ],
    "asarUnpack": [
      "dist/**/*",
      "node_modules/cap/**/*"
    ],
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "icon": "icon.png"
    },
    "win": {
    "target": "nsis",
    "icon": "icon.ico"
    },
    "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "cap": "^0.2.1"
  }
}
